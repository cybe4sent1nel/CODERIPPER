# =========================================
# Dependencies
# =========================================
node_modules/
.pnpm-store/
.yarn/
bower_components/

# =========================================
# Next.js
# =========================================
.next/
out/
build/
.swc/

# =========================================
# Environment Variables
# =========================================
.env
.env.local
.env.development.local
.env.test.local
.env.production.local
.env*.local

# Keep .env.example for reference
!.env.example

# =========================================
# Python
